<view class="list-item j_hot_zone_pro_item j_touch_slide">
          <view class="bnb-list-photo">
            <view class="con-slides">
              <view>
                <image class="lazy" src="http://mmbiz.qpic.cn/mmbiz_jpg/VdNmsYQXdHUgBrpriaTlZDMQ46AKT7Nnbwxst9rDvibIldWWPwolmnOhdWpvWa0ChWQIOxgeVAHadEAFdsLfmvJw/0" style="opacity: 1;"></image>
              </view>
            </view>
          </view>
          <view class="list-item-con">
            <view class="con-rule">
              <text class="txt-point">{{item.product.index.commentScore}}分</text>
              <text class="txt-topic">{{item.product.index.theHouseType}}</text>
              <view class="txt-size">
                {{item.product.index.rname}}
              </view>
              <view class="txt-bed">
                {{item.product.beds}}床
              </view>
            </view>
            <view class="tit">{{item.product.index.pname}}</view>
            <view class="con-price">
              <view class="txt-price-now">
                <text class="unit">￥</text>
                <text class="price">{{item.product.index.price.price}}</text>
              </view>
              <block wx:if="{{item.product.index.price.originalPrice != item.product.index.price.price}}">
                <view class="txt-price-origin">
                  <text class="val">￥{{item.product.index.price.originalPrice}}</text>
                </view>
              </block>
            </view>
          </view>
        </view>